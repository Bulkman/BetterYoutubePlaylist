<script>
  function showplaylist(index) {
    $.ajax ({
      url: '/show_playlist',
      type: 'post',
      data: {pindex: index},
      dataType: 'html',
      success: function (data){
        $("#playlist_items").html(data);
      },
      error: function(jqXHR, status,error){ console.log (status); console.log (error); console.log(jqXHR.responseText)}
    });
  }
</script>

<div class="col-md-3">
  <div class="row">
    <div class="col-md-12">
      <div class="list-group">
        <a href="#" class="list-group-item active">TITLE LIST</a>
        <%i=0%>
          <% playlists.each do |playlists_youtube| %>
              <a href="#" class="list-group-item list-group-item-action" onclick="showplaylist('<%= i %>')">
                <%= playlists_youtube["snippet"]["localized"]["title"] %>
              </a>
            <% i +=1%>
          <%end %>
      </div>
    </div>
  </div>
</div>