<div id="playlist_items" class="col-xs-6 col-sm-6 col-md-3 col-lg-3">

  <script>
    function videoframe(id) {
      $("#ytplayer").attr("src", "http://www.youtube.com/embed/" + id + "?autoplay=1&origin=http://example.com");
    }
  </script>

  <% index ||= 0 %>
  <% if playlists != nil && !playlists.empty? && playlists[index.to_i]["id"] != nil && playlists[index.to_i]["id"].length > 0 %>
            <div class="list-group">
              <div>
                <a href="#" class="list-group-item active">LIST ITEM</a>
                <div class="btn-group" role="group" aria-label="...">
                  <button type="button" class="btn btn-default">Left</button>
                </div>
              </div>
              <% count = 1 %>
              <% playlists[index.to_i]["content"].each do |video| %>
                  <a href="#" class="list-group-item list-group-item-action" onclick="videoframe('<%= video['resourceId']['videoId']%>')">
                    <%= count.to_s << ". " << video["title"] %>
                  </a>
                  <% count+=1 %>
              <% end %>
            </div>
  <% end %>
</div>