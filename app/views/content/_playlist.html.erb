<div id="playlist_items">
  <% if current_playlist_id != nil && current_playlist_id.length > 0 %>
      <div class="col-md-3">
        <div class="row">
          <div class="col-md-12">
            <div class="list-group">
              <a href="#" class="list-group-item active">LIST ITEM</a>
              <% count = 1 %>
              <% playlist_items.each do |video_title| %>
                  <a href="#" class="list-group-item list-group-item-action ">
                    <%= count.to_s << ". " << video_title %>
                  </a>
                  <% count+=1 %>
              <%end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>